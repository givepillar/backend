{
  "name": "pillar",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start-prod": "node dist/server.js",
    "start": "nodemon src/server.js --exec \"node -r @babel/register\"",
    "clean": "rimraf dist",
    "build": "yarn clean && mkdir -p dist && babel src -s -D -d dist"
  },
  "dependencies": {
    "@sendgrid/mail": "^6.4.0",
    "apollo-graphql": "^0.3.3",
    "apollo-server-express": "^2.6.7",
    "axios": "^0.19.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "graphql": "^14.4.2",
    "graphql-tools": "^4.0.5",
    "helmet": "^3.18.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.19.0",
    "lodash": "^4.17.15",
    "morgan": "^1.9.1",
    "objection": "^1.6.9",
    "pg": "^7.11.0",
    "stripe": "^7.9.1",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.0",
    "@babel/plugin-proposal-class-properties": "^7.5.0",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
    "@babel/preset-env": "^7.5.0",
    "@babel/register": "^7.4.4",
    "husky": "^3.0.0",
    "knex-migrate": "^1.7.2",
    "lint-staged": "^9.1.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  }
}
